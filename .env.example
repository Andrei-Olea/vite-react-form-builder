# ========================================
# Environment Variables
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ========================================
# Frontend Configuration (VITE_ prefix required)
# ========================================

# Google Sheets Script URL
VITE_GOOGLE_SHEETS_URL=https://script.google.com/macros/s/YOUR_SCRIPT_ID_HERE/exec

# API Endpoint (relative path for same domain, or full URL for external)
VITE_API_ENDPOINT=api/submit.php

# Minimum savings amount (in COP)
VITE_MIN_SAVINGS_AMOUNT=250000

# Maximum number of installments
VITE_MAX_INSTALLMENTS=11

# Form availability (true = open, false = closed)
VITE_FORM_CLOSED=false

# ========================================
# Development Configuration
# ========================================

# Vite Dev Server Proxy Target
# This is the URL where the Vite dev server will proxy /api requests during development
# Examples:
#   - https://yourapp.ddev.site/your-form-path  (for local DDEV)
#   - https://staging.example.com               (for staging server)
#   - https://localhost:8000                    (for local PHP server)
VITE_DEV_PROXY_TARGET=https://yourapp.ddev.site/your-project-path

# ========================================
# Backend Configuration (PHP)
# ========================================

# Email Settings
EMAIL_ENABLED=true
EMAIL_FROM_ADDRESS=theemail@example.com
EMAIL_FROM_NAME="Comunications The company"
EMAIL_BCC_ADDRESSES=admin@example.com
EMAIL_SUBJECT="The subject of the email"

# SMTP Settings
SMTP_HOST=mail.example.com
SMTP_PORT=587
SMTP_SECURE=tls
SMTP_USERNAME=username@example.com
SMTP_PASSWORD=your_password_here

# Application Settings
APP_LOG_SUBMISSIONS=true
APP_LOG_FILE=submissions.log
APP_ALLOWED_ORIGINS=*

# ========================================
# Deployment Configuration
# ========================================

# Create zip file during deployment (true/false)
DEPLOY_CREATE_ZIP=true

# Your application URL (used for DDEV proxy and deployment)
# Examples:
#   - https://yourapp.ddev.site/your-form-path
#   - https://production.example.com
DEPLOY_APP_URL=https://yourapp.ddev.site/your-project-path

# Deployment zip filename (without .zip extension)
# Default: yourapp-deploy
DEPLOY_ZIP_NAME=yourapp-deploy
