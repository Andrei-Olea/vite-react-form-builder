# ========================================
# Codecol Savings Program - Environment Variables
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ========================================
# Frontend Configuration (VITE_ prefix required)
# ========================================

# Google Sheets Script URL
VITE_GOOGLE_SHEETS_URL=https://script.google.com/macros/s/YOUR_SCRIPT_ID_HERE/exec

# API Endpoint (relative path for same domain, or full URL for external)
VITE_API_ENDPOINT=api/submit.php

# Minimum savings amount (in COP)
VITE_MIN_SAVINGS_AMOUNT=250000

# Maximum number of installments
VITE_MAX_INSTALLMENTS=11

# Form availability (true = open, false = closed)
VITE_FORM_CLOSED=false

# ========================================
# Backend Configuration (PHP)
# ========================================

# Email Settings
EMAIL_ENABLED=true
EMAIL_FROM_ADDRESS=theemail@example.com
EMAIL_FROM_NAME="Comunications The company"
EMAIL_BCC_ADDRESSES=admin@example.com
EMAIL_SUBJECT="Programa de Ahorro + Bono de Bienestar Navide√±o 2025"

# SMTP Settings
SMTP_HOST=mail.example.com
SMTP_PORT=587
SMTP_SECURE=tls
SMTP_USERNAME=username@example.com
SMTP_PASSWORD=your_password_here

# Application Settings
APP_LOG_SUBMISSIONS=true
APP_LOG_FILE=submissions.log
APP_ALLOWED_ORIGINS=*
